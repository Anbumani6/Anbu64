T = int(input())
for t in range(T):
    n = int(input())
    h = list(map(int,input().split()))
    p = h[n//2]
   
    c = 0
    k = 0
    
    if n%2 != 0:
        for i in range((n//2)+1):
            if h[i] == i+1  and h[n-i-1] == i+1:
                pass
            else:
                c = 1
                break
            
        if c == 1:
            print("no")
        else:
            print("yes")
    
    else:
        print("no")
