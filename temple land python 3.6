def check(lis, nu):
    nu -= 1
    i = 0
    while True:
        if lis[i] + 1 != lis[i+1]:
            return False
        if lis[nu] + 1 != lis[nu - 1]:
            return False
        nu -= 1
        i += 1
        if nu <= i:
            return True


for _ in range(int(input())):
    n = int(input())
    li = list(map(int, input().split()))
    if n % 2 != 0:
        if li[0] == 1:
            if check(li, n):
                print('yes')
            else:
                print('no')
        else:
            print('no')
    else:
        print('no')
